@model Shop_Phone_MVC.Models.PhonesViewModel

@{
    ViewData["Title"] = "Phone";
}

<script>
   window.onload= function Message() {
       
           alert('@Model.Message');
       
    }
</script>
@for (int i = 0; i < Model.phonesview.Count; i += 4)
{<div class="row">
    @for (int j = 0; j < 4 && i + j < Model.phonesview.Count; j++)
        {
     <div class="col-md-3">
         <img width="150" height="150" src="~/images/phone.jpg" />
         <h4>@Model.phonesview[i + j].Model @Model.phonesview[i + j].Marka</h4>
         <ul>
             <li>Цена: @Model.phonesview[i + j].Price грн.</li>
             <li>Память: @Model.phonesview[i + j].Memory Gb</li>
             <li>Батарея: @Model.phonesview[i + j].Battery mA/час</li>
             <li>Камера: @Model.phonesview[i + j].Camera mpx</li>
             <li>Описание: @Model.phonesview[i + j].Description</li>
         </ul>
         <form method="post">
             <input type="hidden" name="ID" value=@Model.phonesview[i + j].ID>
             <input id="Button1" type="submit" class="btn btn-warning" value="Добавить в корзину" />
         </form>

     </div>

        }
</div>

};


