@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    //  @Html.Hidden("Id", Model.phones[i + j].IDPhone)
    
}
<script>
   window.onload= function Message() {
      
           alert('@Model.Message');
       
    }
</script>
@for (int i = 0; i < Model.phones.Count; i += 4)
{<div class="row">
    @for (int j = 0; j < 4 && i + j < Model.phones.Count; j++)
    {
        <div class="col-md-3">
            <h4>@Model.phones[i + j].Model @Model.phones[i + j].Marka</h4>
            <ul>
                <li>Цена: @Model.phones[i + j].Price грн.</li>
                <li>Память: @Model.phones[i + j].Memory Gb</li>
                <li>Батарея: @Model.phones[i + j].Battery mA/час</li>
                <li>Камера: @Model.phones[i + j].Camera mpx</li>
                <li>Описание: @Model.phones[i + j].Desc</li>
            </ul>
            <form method="post">
                <input type="hidden" name="ID" value=@Model.phones[i + j].IDPhone>
                <input id="Button1"  type="submit" class="btn btn-warning" value="Добавить в корзину" />
            </form>

        </div>
    
    };
</div>

};



